<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AirportDetailsActivity">
        <include
            android:id="@+id/toolBarLayout"
            layout="@layout/toolbar_layout" />
        <TextView
            android:id="@+id/airportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Airport name:"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/toolBarLayout"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edNameAirport"
            android:padding="14dp"
            android:inputType="text"
            android:maxLines="1"
            android:layout_below="@id/airportText"
            android:hint="enter the airport iata code."
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/ic_inputbg"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/SearchAirportBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/edNameAirport"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="15dp"
            android:background="@drawable/main_bg"
            android:text="@string/searchairport"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</layout>
